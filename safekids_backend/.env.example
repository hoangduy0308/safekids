# SafeKids Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:8080

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/safekids
# Or use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/safekids?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Firebase Cloud Messaging (for push notifications)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com

# Location Tracking Configuration
LOCATION_UPDATE_INTERVAL=30000
# 30 seconds (30000ms) - adjust based on battery vs accuracy tradeoff

# Geofencing Configuration
DEFAULT_GEOFENCE_RADIUS=100
# Default radius in meters

# Screen Time Configuration
SCREENTIME_CHECK_INTERVAL=60000
# 1 minute (60000ms)

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000

# Optional: Logging
LOG_LEVEL=info
# Options: error, warn, info, debug

# Email Service (Gmail SMTP)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-16-char-app-password

# Backend URL (for email verification links)
BACKEND_URL=http://localhost:3000

# SMS Service (Twilio Verify API)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_32_char_auth_token
TWILIO_VERIFY_SERVICE_SID=VAxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
